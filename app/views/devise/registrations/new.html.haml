.container_sign_up
  .sign_up_content
    %h2 ようこそPRAISEへ！
    %p  PRAISEは褒められてあなたや誰かが少しでもほわほわして欲しい。
    %p  そんなアプリです

  .sign_up_menu
    %h2 ユーザー登録

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign_text'
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: 'sign_text'
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign_text'
      .actions
        = f.submit "Sign up", class: 'sign_up_button'
    = render "devise/shared/links"
