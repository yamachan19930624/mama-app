.container
  - @profile.errors.full_messages.each do |message|
    %li.error_message= message
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div.form_area
      %div
        = f.label :avatar, 'アバター'
      %div
        = f.file_field :avatar
      %div
        = f.label :nickname, 'ハンドルネーム', class: 'form_text'
      %div
        = f.text_field :nickname,  class: 'form_title'
      %div
        = f.label :introduction, '自己紹介', class: 'form_text'
      %div
        = f.text_area :introduction ,class: 'form_introduction'
      %div
        = f.label :gender, '性別'
      %div
        = f.select :gender, Profile.genders.map { |k, v| [ I18n.t("enum.genders.#{k}"), k ] }, {}, { class: 'form_text' }
      %div 
        = f.label :birthday, '生年月日'
      %div
        = f.date_field :birthday, class: 'form_text'
      %div
        = f.label :subscribed, '通知を受け取る'
        = f.check_box :subscribed
      =f.submit '保存', class: 'btn_prymary'